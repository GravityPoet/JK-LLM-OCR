{
  "identifier": "io.github.gravitypoet.jk.llm.ocr",
  "version": "0.2.3",
  "category": "ocr",
  "name": "JK-LLM-OCR—GravityPoet开发",
  "summary": "最强OCR插件（本地 + 云端服务商）",
  "icon": "",
  "author": "JK-LLM-OCR Contributors",
  "homepage": "https://github.com/GravityPoet/JK-LLM-OCR",
  "appcast": "https://raw.githubusercontent.com/GravityPoet/JK-LLM-OCR/main/appcast.json",
  "minBobVersion": "1.6.0",
  "options": [
    {
      "identifier": "ocrBackendMode",
      "type": "menu",
      "title": "OCR 后端模式",
      "defaultValue": "local",
      "menuValues": [
        {
          "title": "本地 PP-OCRv5_server",
          "value": "local"
        },
        {
          "title": "云端 OpenAI 兼容 OCR",
          "value": "cloud"
        }
      ],
      "desc": "默认本地模式。切到云端后，将调用 OpenAI 兼容多模态接口（如硅基流动）。"
    },
    {
      "identifier": "serverUrl",
      "type": "text",
      "title": "OCR 服务地址",
      "defaultValue": "http://127.0.0.1:50000/ocr",
      "desc": "仅本地模式生效。本地 PP-OCRv5_server 的 HTTP 地址，必须以 http:// 或 https:// 开头。"
    },
    {
      "identifier": "cloudBaseUrl",
      "type": "text",
      "title": "云端 Base URL",
      "defaultValue": "https://api.siliconflow.cn/v1",
      "desc": "仅云端模式 + OpenAI 兼容通道生效。支持填完整 /chat/completions，插件会自动兼容处理。",
      "textConfig": {
        "type": "visible",
        "placeholderText": "https://api.siliconflow.cn/v1"
      }
    },
    {
      "identifier": "cloudApiKey",
      "type": "text",
      "title": "云端 API Key",
      "desc": "仅云端模式生效。示例：硅基流动 API Key。",
      "textConfig": {
        "type": "secure",
        "placeholderText": "sk-xxxxxxxxxxxxxxxxxxxxxxxx"
      }
    },
    {
      "identifier": "cloudProvider",
      "type": "menu",
      "title": "云端通道",
      "defaultValue": "openai-compatible",
      "menuValues": [
        {
          "title": "OpenAI 兼容（硅基流动等）",
          "value": "openai-compatible"
        },
        {
          "title": "智谱 GLM-OCR（layout_parsing）",
          "value": "zhipu-glm-ocr"
        }
      ],
      "desc": "仅云端模式生效。GLM-OCR 走智谱专用接口，不是 /chat/completions。"
    },
    {
      "identifier": "cloudModel",
      "type": "text",
      "title": "云端模型名",
      "defaultValue": "PaddlePaddle/PaddleOCR-VL-1.5",
      "desc": "仅 OpenAI 兼容通道生效。可自定义任何支持图像输入的模型名。",
      "textConfig": {
        "type": "visible",
        "placeholderText": "PaddlePaddle/PaddleOCR-VL-1.5"
      }
    },
    {
      "identifier": "glmOcrEndpoint",
      "type": "text",
      "title": "GLM-OCR 接口地址",
      "defaultValue": "https://open.bigmodel.cn/api/paas/v4/layout_parsing",
      "desc": "仅智谱 GLM-OCR 通道生效。默认官方 layout_parsing 接口。",
      "textConfig": {
        "type": "visible",
        "placeholderText": "https://open.bigmodel.cn/api/paas/v4/layout_parsing"
      }
    },
    {
      "identifier": "glmOcrModel",
      "type": "text",
      "title": "GLM-OCR 模型名",
      "defaultValue": "glm-ocr",
      "desc": "仅智谱 GLM-OCR 通道生效。当前官方值为 glm-ocr。",
      "textConfig": {
        "type": "visible",
        "placeholderText": "glm-ocr"
      }
    },
    {
      "identifier": "cloudImageDetail",
      "type": "menu",
      "title": "云端图像细节",
      "defaultValue": "high",
      "menuValues": [
        {
          "title": "高（识别更稳）",
          "value": "high"
        },
        {
          "title": "自动",
          "value": "auto"
        },
        {
          "title": "低（更省）",
          "value": "low"
        }
      ],
      "desc": "仅 OpenAI 兼容通道生效。映射 image_url.detail（high/auto/low）。"
    },
    {
      "identifier": "cloudPrompt",
      "type": "text",
      "title": "云端 OCR 指令",
      "defaultValue": "请识别图片中的全部文字，仅返回纯文本结果，保留原有换行，不要解释。",
      "desc": "仅 OpenAI 兼容通道生效。用于约束模型输出格式。",
      "textConfig": {
        "type": "visible",
        "height": "64",
        "placeholderText": "请识别图片中的全部文字，仅返回纯文本结果，保留原有换行，不要解释。"
      }
    },
    {
      "identifier": "requestTimeoutSec",
      "type": "text",
      "title": "请求超时(秒)",
      "defaultValue": "30",
      "desc": "单次 OCR 请求超时时间，范围 5-180 秒（本地/云端通用）。"
    },
    {
      "identifier": "textRecScoreThresh",
      "type": "text",
      "title": "文本置信度阈值",
      "defaultValue": "0.0",
      "desc": "仅本地模式生效。传给 PP-OCRv5 的 textRecScoreThresh，范围 0.0-1.0。"
    },
    {
      "identifier": "useDocOrientationClassify",
      "type": "menu",
      "title": "启用文档方向分类",
      "desc": "仅本地模式生效。",
      "defaultValue": "false",
      "menuValues": [
        {
          "title": "关闭",
          "value": "false"
        },
        {
          "title": "开启",
          "value": "true"
        }
      ]
    },
    {
      "identifier": "useDocUnwarping",
      "type": "menu",
      "title": "启用文档矫正",
      "desc": "仅本地模式生效。",
      "defaultValue": "false",
      "menuValues": [
        {
          "title": "关闭",
          "value": "false"
        },
        {
          "title": "开启",
          "value": "true"
        }
      ]
    },
    {
      "identifier": "useTextlineOrientation",
      "type": "menu",
      "title": "启用文本行方向分类",
      "desc": "仅本地模式生效。",
      "defaultValue": "false",
      "menuValues": [
        {
          "title": "关闭",
          "value": "false"
        },
        {
          "title": "开启",
          "value": "true"
        }
      ]
    }
  ]
}
